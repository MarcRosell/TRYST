extends ../layout

block content
	div
		// user
		.row.all.backgroundSearch
			form.col.offset-s4.s4(action='/api/user/update', method='POST')
				.config
					.row
						.input-field.col.s6
							input#first_name.validate(value=user.firstname, type='text', name='firstname')
							label.active(for='first_name') First Name
						.input-field.col.s6
							input#last_name.validate(value=user.lastname, type='text', name='lastname')
							label.active(for='last_name') Last Name
					.row
						.input-field.col.s12
							input#email.validate(value=user.email, type='email', name='email')
							label.active(for='email') Email
					.row
						.input-field.col.s12
							input#password.validate(value=user.password, name='password', type='password')
							label.active(for='password') Password
					.row
						.file-field.input-field.col.s12
							button.btn.black.waves-effect.waves-light(name='image', type='submit')
								| change image
								i.material-icons.right
							input(type='file')
							.file-path-wrapper.inputImg
								input.file-path.inputImg(type='text')
					.row
						.file-field.input-field.col.s12
						button.btn.black.waves-effect.waves-light(type='submit', name='action')
							| update profile
							i.material-icons.right send
	ul#slide-out.side-nav.fixed.show-on-large
		li.backgroundImgUser
			.user-view
				a(href='')
					img.circle.responsive-img(src='img/user.jpg')
				.user-name
					a(href='')
						span.white-text.name Marc Rosell
		li
			a.userPage(href='/appointments')
				i.material-icons.user-icons.userPage blur_linear
				span.userPage Appoinments
		li.active
			a(href='/user')
				i.material-icons.user-icons settings
				span Configuration
		li
			.divider
		li
			a.subheader
				i.material-icons.red-text.user-icons
					| exit_to_app
				| Log Out